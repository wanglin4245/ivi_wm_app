<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lin1wang.animtest.MainActivity">

    <TextView
        android:id="@+id/m_text"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="我只是个动画啊"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#00ff00"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="旋转"/>
    <Button
        android:id="@+id/btn_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_rotate"
        android:layout_alignBottom="@id/btn_rotate"
        android:text="缩放"/>
    <Button
        android:id="@+id/btn_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_scale"
        android:layout_alignBottom="@id/btn_rotate"
        android:text="透明"/>
    <Button
        android:id="@+id/btn_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_alpha"
        android:layout_alignBottom="@id/btn_rotate"
        android:text="位移"/>
    <Button
        android:id="@+id/btn_integrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_translate"
        android:layout_toStartOf="@id/btn_translate"
        android:text="组合"/>


</RelativeLayout>
